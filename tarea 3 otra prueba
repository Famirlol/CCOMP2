#include <iostream>

using namespace std;

void ordenar(int* ini, int* mitad) {
    int* fin = (ini + (mitad - ini) * 2) - 1;
    while (mitad != fin) {
        for (int* i = ini; i <=mitad; ++i) {
            if (*mitad < *i) {
                swap(*i, *mitad);
            }
            if (i== mitad){
                ini += 1;
                mitad += 1;
                i = ini;

            }
        }

    }
}

int main() {
    int e[] = { 2, 4, 6, 8, 22, 3, 5, 11, 25, 33 };
    int* ini = e;
    int* mitad = e + 5;

    ordenar(ini, mitad);

    for (int i = 0; i < 10; i++) {
        cout << e[i] << " ";
    }
}
